<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-6 offset-3">
            <h3 class="mt-3">Create a New Listing</h3>
            <form action="/listings" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter Description"
                        class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input name="listing[image]" placeholder="Enter Image URL/Link" type="text" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-5">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter Price" type="number" class="form-control"
                            required>
                    </div>
                    <div class="mb-3 col-md-7">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control">
                </div>

                <br><br>
                <button type="submit" class="btn btn-dark add-btn">Add Listing</button>
            </form>
        </div>
    </div>